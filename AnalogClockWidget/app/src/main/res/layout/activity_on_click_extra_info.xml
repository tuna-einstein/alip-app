<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="#FF0099CC">
    <TextView
        android:id="@+id/city_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="XXXXXXX, XX"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/line_address_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="000 xxxxxxxx xx"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/lat_long_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="(00.00,  000.00)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" />
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/compass_container">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/compass_icon"/>
    </FrameLayout>


    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format24Hour="EEE, d MMM yyyy HH:mm"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/weather_icon"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:id="@+id/temperature_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00.00 F (00.00 F)"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/droplet"/>
        <TextView
            android:id="@+id/humidity_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00%"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/pressure"/>
        <TextView
            android:id="@+id/pressure_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000 hPa"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wind"/>
        <TextView
            android:id="@+id/wind_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 miles/sec, 000 \n (0.00 km/sec)"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
    </LinearLayout>

</LinearLayout>